<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_shape"
            android:elevation="20dp"
            android:layout_height="220dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="200dp"
            android:src="@drawable/header"
            android:layout_marginTop="10dp"
            android:layout_height="match_parent">
        </pl.droidsonroids.gif.GifImageView>

        <com.tomer.fadingtextview.FadingTextView
            android:id="@+id/fadingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:fadingTextViewTimeout="1000"
            android:layout_marginTop="40dp"
            android:textColor="#12032E"
            android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="âœ‰ Premium Feature Coming Soon"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/rectangle"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:text="Get Started"
            android:padding="10dp"
            android:textSize="23dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:outlineSpotShadowColor="#C8380B"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="180dp"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/rounded_image_background"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop" />

                    <!-- TextView with overlay effect -->
                    <TextView
                        android:id="@+id/card_title1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@drawable/overlay_background"
                        android:padding="48dp"
                        android:text="About Monkey Pox"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!-- ===================== -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:outlineSpotShadowColor="#C8380B"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/rounded_image_background"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop" />

                    <!-- TextView with overlay effect -->
                    <TextView
                        android:id="@+id/card_title2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:background="@drawable/overlay_background"
                        android:padding="48dp"
                        android:text="About Skin Scanner"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <!-- =================== -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:outlineSpotShadowColor="#C8380B"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/rounded_image_background"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:id="@+id/card_title3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="12dp"
                        android:background="@drawable/overlay_background"
                        android:padding="48dp"
                        android:text="Privacy Policy"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        </HorizontalScrollView>
